<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form method="post" action="/charities/{{review.charityId}}/reviews/{{review._id}}?_method=PUT">
            <fieldset>
                <legend>Edit Review</legend>
                {{!-- MESSAGE --}}
                <label for="review">Message</label><br>
                <input id="review" type="text" name="review" value="{{review.review}}">
            </fieldset>
            <p>
                <button type="submit">Save Message</button>
            </p>
        </form>
        
        <form method="get" action="/reviews/{{review._id}}">
            <p>
                <button type="submit">Cancel</button>
            </p>
        </form>
    </div>
</div>
