<div class="row">
    {{!-- Making the form center --}}
    <div class="col-sm-6 col-sm-offset-2">
        <form method="post" action="/donations">
            <fieldset>
                <legend>New Donation</legend>
                {{!-- Title --}}
                <div class="form-group">
                    <label for="name">Name</label><br>
                    <input type="text" name="name" />
                </div>
                
                <div class="form-group">
                    <label for="message">Message</label><br>
                    <textarea class="form-control" name="message" type='text' id="donation-message" rows="10"></textarea>
                </div>

                <div class="form-group">
                    <label for="donationAmount">Donation Amount</label><br>
                    <input type="Number" name="donationAmount">
                </div>
            </fieldset>
                {{!-- button --}}
            <div class='form-group'>
                <button class="btn btn-primary" type="submit">Donate</button>
            </div>
        </form>
    </div>
</div>


